jQuery( document ).ready(function() {

//check for cookie
	//60000 miliseconds for 60 seconds
	//setTimeout(emailPopup, 6000);
	var match = document.cookie.match(new RegExp('(^| )emailPopup=([^;]+)'));
	if (!match) {
		setTimeout(emailPopup, 8000);
	}
});

function emailPopup() {

	
    var popupTxt = '<p>Be the first to know about newly opened hideaways and incredible hidden gems, unearthed and reviewed for you by our top team of professional Hotel Gurus.</p>';

     popupTxt += '<form action="/email-signup" method="post"><p>Email address*:<br><input type="email" name="email" style="width:260px;margin-right:50px"/><img src="https://gallery.mailchimp.com/1d3e67d4ac74c01fd3f3eb947/images/dea92360-e7d3-47d9-9464-7e83d0121368.png"></p><p><input type="submit" class="button" value="Yes, send them to me!" name="newsletterSignup" style="    color: #fff;    background-color: #6a972e;    display: inline-block;    padding: 6px 18px;    margin-bottom: 0;    margin-top: 15px;    font-size: 18px;    font-weight: 700;    line-height: 1.428571429;    text-shadow: 0 1px 2px rgba(0,0,0,.3);    text-align: center;    white-space: nowrap;    vertical-align: middle;    cursor: pointer;      border: 1px solid transparent;    border-radius: 4px;      outline: 0;" /></p></form>';

popupTxt += '<p style="">We value your privacy, and promise never to share your data with anyone else. And remember, you can unsubscribe any time.</p>';
    jamesmedia.ui.Popup.display('SIGN UP TO OUR LATEST FINDS', popupTxt, 500, 200);

	//set cookie so that it doesn't show again
	var d = new Date();
	var days = 10;
    d.setTime(d.getTime() + (days*24*60*60*1000));
    var expires = "expires="+ d.toUTCString();
    document.cookie = "emailPopup=1;" + expires + ";path=/";

} 


